<div class="container">
  <h1><%= @cocktail.name %></h1>
 <div class="container">
    <h3>How do you make it ?</h3>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
<br>
  <h3> Recipe </h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %>
    <% @cocktail.ingredients.each do |ingredient| %>
    <%= ingredient.name %>
    <%= link_to "🗑", dose_path(dose), method: :delete %>
    </li>
    <% end %>
  </ul>
  <ul>
    <% end %>
  </ul>
  <%= link_to "All cocktails 🍸", cocktails_path  %>


</div>
